<div class="flex flex-row w-1/1 pb-20 max-md:flex-col">

<div class="w-1/2 flex flex-col m-3 items-center max-md:w-full">
  <h2 class="text-four text-7xl uppercase mt-20 text-center">Top Track</h2>

  <% j = 1%>

  <% @trackslike.each do |i| %>

 <% if j <= 10 %>
  
    <div class="flex flex-row bg-five h-60 mt-10 rounded-r-xl w-3/4 max-md:w-full">
          <p class="input none"><%= i.inputs %></p>
      <button class="bg-secondary w-64 rounded-tl-3xl rounded-bl-3xl play">
        <svg class="h-36 w-40 m-auto" viewBox="0 0 48 52" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M39.9456 19.0571L4.7378 40.2884C2.66501 41.532 0 40.0515 0 37.6234V13.9343C0 3.60002 11.1634 -2.85524 20.1357 2.29712L33.7272 10.1145L39.916 13.6678C41.9592 14.8819 41.9888 17.843 39.9456 19.0571ZM41.7193 36.4093L29.7267 43.3383L17.7638 50.2377C13.4702 52.6955 8.61391 52.1921 5.09018 49.7047C3.37272 48.5203 3.58 45.8849 5.38629 44.8189L43.0222 22.2551C44.7989 21.1891 47.1382 22.1959 47.4639 24.2391C48.2042 28.8288 46.309 33.7739 41.7193 36.4093Z" fill="#0D1A26"/>
        </svg>
      </button>
      <div class="flex flex-col">
        <h3 class="text-4xl ml-4 mt-4 text-four"><%= i.title%></h3>
        <p class="text-2xl ml-4 mt-4 text-four"><%= i.user.pseudo %></p>
        <div class="flex flex-row">
          <p class="text-2xl ml-4 mt-4 text-four"><%= i.votes.count %> likes</p>
          <p class="text-2xl ml-4 mt-4 text-four"><%= i.comments.count %> commentaires</p>
        </div>
           <div class="flex flex-row">
             <p class="text-2xl ml-4 mt-4 text-four"><a href="<%= track_path(i.id)%>">Voir</a></p>
       </div>
      </div>
    </div>
    <%end%>
    <% j = j + 1%>
  <% end %>
</div>

<div class="flex flex-col w-1/2 m-3  items-center max-md:w-full">
  <h2 class="text-four text-7xl uppercase mt-20  text-center ">Lasted Track</h2>

  
  <% k = 1%>
  <% @trackstime.reverse_each  do |i| %>

   <% if k <= 10 %>
    <div class="flex flex-row bg-five h-60 mt-10 rounded-r-xl w-3/4 max-md:w-full">
          <p class="input none"><%= i.inputs %></p>
      <button class="bg-secondary w-64 rounded-tl-3xl rounded-bl-3xl play">
        <svg class="h-36 w-40 m-auto" viewBox="0 0 48 52" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M39.9456 19.0571L4.7378 40.2884C2.66501 41.532 0 40.0515 0 37.6234V13.9343C0 3.60002 11.1634 -2.85524 20.1357 2.29712L33.7272 10.1145L39.916 13.6678C41.9592 14.8819 41.9888 17.843 39.9456 19.0571ZM41.7193 36.4093L29.7267 43.3383L17.7638 50.2377C13.4702 52.6955 8.61391 52.1921 5.09018 49.7047C3.37272 48.5203 3.58 45.8849 5.38629 44.8189L43.0222 22.2551C44.7989 21.1891 47.1382 22.1959 47.4639 24.2391C48.2042 28.8288 46.309 33.7739 41.7193 36.4093Z" fill="#0D1A26"/>
        </svg>
      </button>
      <div class="flex flex-col">
        <h3 class="text-4xl ml-4 mt-4 text-four"><%= i.title%></h3>
        <p class="text-2xl ml-4 mt-4 text-four"><%= i.user.pseudo %></p>
        <div class="flex flex-row">
          <p class="text-2xl ml-4 mt-4 text-four"><%= i.votes.count %> likes</p>
          <p class="text-2xl ml-4 mt-4 text-four"><%= i.comments.count %> commentaires</p>
        </div>
           <div class="flex flex-row">
             <p class="text-2xl ml-4 mt-4 text-four"><a href="<%= track_path(i.id)%>">Voir</a></p>
           </div>
       
      </div>
    </div>
    <%end%>
  <% k = k + 1 %>
  <% end %>
</div>

</div>
