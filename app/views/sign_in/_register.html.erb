<div class="ml-11 xl:h-form xl:w-form bg-primary bg-opacity-70 backdrop-blur-sm rounded-xl flex justify-center flex-col">
  <h2 class="text-center text-four text-7xl mb-12">S'enregistrer</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="flex flex-col text-four text-2xl">
    <%= f.label :email, class:"text-4xl"%>
    <%= f.text_field :email, class:"h-20 text-primary text-2xl bg-secondary rounded-lg"%>
    <%= f.label :password, class:"text-4xl" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> characters minimum)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"h-20 text-primary text-2xl bg-secondary rounded-lg" %>
      <%= f.label :password_confirmation, class:"text-4xl" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"h-20 text-primary text-2xl bg-secondary rounded-lg" %>
    <div class="flex justify-end">
      <%= f.submit 'Sign up', class:"hover:bg-secondary text-four hover:text-primary font-light border-secondary border-4 h-20 w-60 hover:cursor-pointer duration-100 mt-8" %>
    </div>
  </div>
  <% end %>
</div>